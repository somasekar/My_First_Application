
  <font color="red"><%= flash[:notice] %></font>
  <br />
  <table border="1">
  <%= form_for(:session, :url => sessions_path) do |f| %>
  <tr bgcolor="black">
    <td colspan ="18"><font color="white"><b><center>USER LOGIN</center></b></font></td>
  </tr>
  <tr bgcolor="black">
    <td><font color="white"><%=f.label :user_name %></font></td>
     <td><%= f.text_field :user_name %></td>
  </tr>
    <tr bgcolor="black">
    <td><font color="white"><%= f.label :password %></font></td>
     <td><%= f.password_field :password %></td>
  </tr>
   <tr bgcolor="black">
     <td><font color="white"><%= f.label "Action" %></font></td>
      <td><%= f.submit "Sign in"%> <font color="white">|</font> <%=link_to("Register",{:controller => "users", :action=>'new'}) %></td>
  </tr>
  <%end%>
</table>